# --- Application Security ---
SECRET_KEY=change_this_to_a_secure_random_string_in_production
DEBUG=False

# --- Database ---
MONGO_URI=mongodb://localhost:27017

# --- OCI Object Storage (Recommended for Long Term Logs) ---
# If using Instance Principals (running on OCI VM), these can be minimal.
# If running locally, you need a config profile.
OCI_CONFIG_PROFILE=DEFAULT
OCI_NAMESPACE=your_tenancy_namespace
OCI_BUCKET_NAME=sentinai-logs
OCI_REGION=us-ashburn-1

# --- Log Collector (HIDS) ---
TARGET_SERVER_IP=192.168.1.103
TARGET_SSH_USER=root
TARGET_SSH_PASSWORD=secret_password
